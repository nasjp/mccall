{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mccall",
  "version": "0.1.0",
  "identifier": "y",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "mccall",
        "width": 600,
        "height": 700,
        "resizable": false,
        "minWidth": 600,
        "minHeight": 700,
        "maxWidth": 600,
        "maxHeight": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
